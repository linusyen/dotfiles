deflogin on
#autodetach off
vbell on
vbell_msg "   Wuff  ----  Wuff!!  "
# 設定每個視窗的標題
caption always "%{= wk} %{= KY} [%n]%t @ %H %{-} %= %{= KR} %l %{-} | %{= KG} %Y-%m-%d %{-} "
# 設定總是顯示 screen 的狀態列
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s "
# 設定預設的文字編碼
defencoding utf8
# 設定視窗回捲時可看到的行數
defscrollback 9999
